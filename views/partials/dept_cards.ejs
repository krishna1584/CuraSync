<section class="features" id="departments">
    <h2>Our Departments</h2>
    <div class="cards">
        <% const departments = [
            { title: "Cardiology", image: "../assets/gmchCardiology.png", desc: "Comprehensive heart care services." },
            { title: "Neurology", image: "../assets/gmchNeurology.png", desc: "Specialized care for brain and nervous system disorders." },
            { title: "Orthopedics", image: "../assets/maxOrtho.png", desc: "Advanced treatments for bones and joints." },
            { title: "Radiology", image: "../assets/gmchRadiology.png", desc: "Imaging and diagnostics." },
            { title: "Neurology", image: "../assets/gmchNeurology.png", desc: "Specialized care for brain and nervous system disorders." },
