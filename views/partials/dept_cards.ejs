            { title: "Cardiology", image: "../assets/gmchCardiology.png", desc: "Comprehensive heart care services." },
            { title: "Orthopedics", image: "../assets/gmchOrthopedics.png", desc: "Advanced treatments for bones and joints." },
            { title: "Gastroenterology", image: "../assets/gmchGastroenterology.png", desc: "It specializes in the diagnosis and treatment of digestive system disorders." }
        ]; %>

        <% departments.forEach(dept => { %>
            <div class="card">
                <h3><%= dept.title %></h3>
                <img src="<%= dept.image %>" alt="<%= dept.title %>">
                <p><%= dept.desc %></p>
            </div>
        <% }) %>
    </div>
</section>
